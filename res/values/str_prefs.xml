<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- pref.service -->
        <string name="pref_category_service">Scheduled delete service</string>

        <!-- service_active (Checkbox) -->
        <string name="pref_service_isActive_key">pref_service_isActive</string>
        <string name="pref_service_isActive_name">Toggle ClearMeOut service</string>
        <string name="pref_service_isActive_summaryOn">Service is running</string>
        <string name="pref_service_isActive_summaryOff">Service is currently off</string>
        <string name="pref_service_isActive_default">false</string>

        <!-- target_folder (EditText with custom onClick) -->
        <string name="pref_service_targetFolder_key">pref_service_targetFolder</string>
        <string name="pref_service_targetFolder_name">Select folder to clear</string>
        <string name="pref_service_targetFolder_text">[Folder path]</string>
        <string name="pref_service_targetFolder_default">[set folder to start]</string>


    <!-- pref.delete -->
        <string name="pref_category_delete">Delete settings</string>
    
        <!-- notify_on_delete (Checkbox) -->
        <string name="pref_delete_notifyOnDelete_key">pref_service_notifyOnDelete</string>
        <string name="pref_delete_notifyOnDelete_name">Notify on delete?</string>
        <string name="pref_delete_notifyOnDelete_summaryOn">Will show notification on delete</string>
        <string name="pref_delete_notifyOnDelete_summaryOff">Will delete silently</string>
        <string name="pref_delete_notifyOnDelete_default">true</string>
    
        <!-- recursive_delete (Checkbox) -->
        <string name="pref_delete_doRecursiveDelete_key">pref_delete_doRecursiveDelete</string>
        <string name="pref_delete_doRecursiveDelete_name">Recursively delete?</string>
        <string name="pref_delete_doRecursiveDelete_summaryOn">Apply settings to all sub-folders too</string>
        <string name="pref_delete_doRecursiveDelete_summaryOff">Leave sub-folders untouched</string>
        <string name="pref_delete_doRecursiveDelete_default">false</string>

        <!-- delete_folders (Checkbox) -->
        <string name="pref_delete_doDeleteFolders_key">pref_delete_doDeleteFolders</string>
        <string name="pref_delete_doDeleteFolders_name">Delete folders?</string>
        <string name="pref_delete_doDeleteFolders_summaryOn">Will delete folders too</string>
        <string name="pref_delete_doDeleteFolders_summaryOff">Will not delete folders</string>
        <string name="pref_delete_doDeleteFolders_default">false</string>


    <!-- pref.interval -->
        <string name="pref_category_interval">Automatic Delete Interval</string>

        <!-- pref.interval.choice -->
        <string name="pref_interval_choice_key">pref_interval_choice</string>
        <string name="pref_interval_choice_name">Select interval type</string>

        <!-- intervals (Intervals themselves defined in "str_intervals.xml") -->
	    <string-array name="pref_interval_choices">
	        <item>@string/pref_interval_everyXMinutes_name</item>
	        <item>@string/pref_interval_everyXHours_name</item>
	        <item>@string/pref_interval_everyXDays_name</item>
	        <item>@string/pref_interval_daily_name</item>
	        <item>@string/pref_interval_weekly_name</item>
	        <item>@string/pref_interval_onTheseDays_name</item>
	        <item>@string/pref_interval_onTheseDates_name</item>
	    </string-array>

        <!-- pref.inteval.isStrictAlarm (Checkbox) -->
        <string name="pref_interval_isStrictAlarm_key">pref_interval_isStrictAlarm</string>
        <string name="pref_interval_isStrictAlarm_name">Use strict alarm interval</string>
        <string name="pref_interval_isStrictAlarm_summaryOn">Clear folder exactly on interval (more battery intensive)</string>
        <string name="pref_interval_isStrictAlarm_summaryOff">Clear folder loosely on interval (more battery friendly)</string>
        <string name="pref_interval_isStrictAlarm_default">false</string>


</resources>
